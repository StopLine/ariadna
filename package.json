{
  "name": "ariadna",
  "displayName": "Ariadna",
  "description": "Tree view bookmarks extension for code analysis and documentation",
  "publisher": "AlexanderBatalschikov",
  "repository": "https://github.com/StopLine/ariadna.git",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ariadna",
          "title": "Ariadna",
          "icon": "resources/ariadna-icon.svg"
        }
      ]
    },
    "views": {
      "ariadna": [
        {
          "id": "ariadnaView",
          "name": "Ariadna"
        },
        {
          "id": "ariadnaDetail",
          "name": "Node Details"
        }
      ]
    },
    "commands": [
      {
        "command": "ariadna.loadThread",
        "title": "Load Thread",
        "icon": "$(folder-opened)",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.loadRecentThread",
        "title": "Load Recent Thread",
        "icon": "$(history)",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.selectNode",
        "title": "Select Node",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.updateSrcLink",
        "title": "Update from Editor",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.updateSrcLinkForNode",
        "title": "Update from Editor",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.selectRootPath",
        "title": "Select Folder",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.saveThread",
        "title": "Save Thread",
        "icon": "$(save)",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.saveThreadAs",
        "title": "Save As...",
        "icon": "$(save-as)",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.createNewThread",
        "title": "Create New Thread",
        "icon": "$(new-file)",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.editComment",
        "title": "Edit Comment",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.editCaption",
        "title": "Edit Caption",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.addChildNode",
        "title": "Add Child",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.insertNodeBefore",
        "title": "Insert Before",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.insertNodeAfter",
        "title": "Insert After",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.deleteNode",
        "title": "Delete",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.addComment",
        "title": "Add",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.addCommentBefore",
        "title": "Add Before",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.addCommentAfter",
        "title": "Add After",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.deleteComment",
        "title": "Delete",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.markCheck",
        "title": "‚úÖ",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.markExclamation",
        "title": "‚ùó",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.markQuestion",
        "title": "‚ùì",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.markFire",
        "title": "üî•",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.markCross",
        "title": "‚ùå",
        "category": "Ariadna"
      },
      {
        "command": "ariadna.markHeart",
        "title": "‚ù§Ô∏è",
        "category": "Ariadna"
      }
    ],
    "submenus": [
      {
        "id": "ariadna.marksSubmenu",
        "label": "Marks"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ariadna.loadThread",
          "when": "view == ariadnaView",
          "group": "navigation@1"
        },
        {
          "command": "ariadna.loadRecentThread",
          "when": "view == ariadnaView",
          "group": "navigation@2"
        },
        {
          "command": "ariadna.saveThread",
          "when": "view == ariadnaView",
          "group": "navigation@3"
        },
        {
          "command": "ariadna.createNewThread",
          "when": "view == ariadnaView",
          "group": "navigation@4"
        },
        {
          "command": "ariadna.saveThreadAs",
          "when": "view == ariadnaView",
          "group": "navigation@5"
        }
      ],
      "view/item/context": [
        {
          "command": "ariadna.updateSrcLink",
          "when": "view == ariadnaDetail && viewItem == srcLinkField",          
          "group": "inline"
        },
        {
          "command": "ariadna.selectRootPath",
          "when": "view == ariadnaDetail && viewItem == rootPathField",
          "group": "inline"
        },
        {
          "command": "ariadna.addChildNode",
          "when": "view == ariadnaView && viewItem == threadItem",
          "group": "1_add"
        },
        {
          "command": "ariadna.addChildNode",
          "when": "view == ariadnaView && viewItem == nodeItem",
          "group": "1_add"
        },
        {
          "command": "ariadna.insertNodeBefore",
          "when": "view == ariadnaView && viewItem == nodeItem",
          "group": "1_add"
        },
        {
          "command": "ariadna.insertNodeAfter",
          "when": "view == ariadnaView && viewItem == nodeItem",
          "group": "1_add"
        },
        {
          "command": "ariadna.deleteNode",
          "when": "view == ariadnaView && viewItem == nodeItem",
          "group": "2_delete"
        },
        {
          "submenu": "ariadna.marksSubmenu",
          "when": "view == ariadnaView && viewItem == nodeItem",
          "group": "3_marks"
        },
        {
          "command": "ariadna.updateSrcLinkForNode",
          "when": "view == ariadnaView && viewItem == nodeItem",
          "group": "4_update"
        },
        {
          "command": "ariadna.addComment",
          "when": "view == ariadnaDetail && viewItem == commentsGroup",
          "group": "1_add"
        },
        {
          "command": "ariadna.addCommentBefore",
          "when": "view == ariadnaDetail && viewItem == commentItem",
          "group": "1_add"
        },
        {
          "command": "ariadna.addCommentAfter",
          "when": "view == ariadnaDetail && viewItem == commentItem",
          "group": "1_add"
        },
        {
          "command": "ariadna.deleteComment",
          "when": "view == ariadnaDetail && viewItem == commentItem",
          "group": "2_delete"
        }
      ],
      "ariadna.marksSubmenu": [
        {
          "command": "ariadna.markCheck",
          "when": "view == ariadnaView && viewItem == nodeItem"
        },
        {
          "command": "ariadna.markExclamation",
          "when": "view == ariadnaView && viewItem == nodeItem"
        },
        {
          "command": "ariadna.markQuestion",
          "when": "view == ariadnaView && viewItem == nodeItem"
        },
        {
          "command": "ariadna.markFire",
          "when": "view == ariadnaView && viewItem == nodeItem"
        },
        {
          "command": "ariadna.markCross",
          "when": "view == ariadnaView && viewItem == nodeItem"
        },
        {
          "command": "ariadna.markHeart",
          "when": "view == ariadnaView && viewItem == nodeItem"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}
