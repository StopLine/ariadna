{
  "name": "ariadna",
  "displayName": "Ariadna",
  "description": "VS Code extension",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ariadna",
          "title": "Ariadna",
          "icon": "resources/ariadna-icon.svg"
        }
      ]
    },
    "views": {
      "ariadna": [
        {
          "id": "ariadnaView",
          "name": "Ariadna"
        },
        {
          "id": "ariadnaDetail",
          "name": "Node Details"
        }
      ]
    },
    "commands": [
      {
        "command": "ariadna.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ariadna.loadThread",
        "title": "Load Thread",
        "icon": "$(folder-opened)"
      },
      {
        "command": "ariadna.selectNode",
        "title": "Select Node"
      },
      {
        "command": "ariadna.updateSrcLink",
        "title": "Update from Editor"
      },
      {
        "command": "ariadna.saveThread",
        "title": "Save Thread",
        "icon": "$(save)"
      },
      {
        "command": "ariadna.editComment",
        "title": "Edit Comment"
      },
      {
        "command": "ariadna.editCaption",
        "title": "Edit Caption"
      },
      {
        "command": "ariadna.addChildNode",
        "title": "Add Child"
      },
      {
        "command": "ariadna.insertNodeBefore",
        "title": "Insert Before"
      },
      {
        "command": "ariadna.insertNodeAfter",
        "title": "Insert After"
      },
      {
        "command": "ariadna.deleteNode",
        "title": "Delete"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ariadna.loadThread",
          "when": "view == ariadnaView",
          "group": "navigation"
        },
        {
          "command": "ariadna.saveThread",
          "when": "view == ariadnaView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ariadna.updateSrcLink",
          "when": "view == ariadnaDetail && viewItem == srcLinkField",
          "group": "inline"
        },
        {
          "command": "ariadna.addChildNode",
          "when": "view == ariadnaView && viewItem == threadItem",
          "group": "1_add"
        },
        {
          "command": "ariadna.addChildNode",
          "when": "view == ariadnaView && viewItem == nodeItem",
          "group": "1_add"
        },
        {
          "command": "ariadna.insertNodeBefore",
          "when": "view == ariadnaView && viewItem == nodeItem",
          "group": "1_add"
        },
        {
          "command": "ariadna.insertNodeAfter",
          "when": "view == ariadnaView && viewItem == nodeItem",
          "group": "1_add"
        },
        {
          "command": "ariadna.deleteNode",
          "when": "view == ariadnaView && viewItem == nodeItem",
          "group": "2_delete"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "typescript": "^5.3.0",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}
